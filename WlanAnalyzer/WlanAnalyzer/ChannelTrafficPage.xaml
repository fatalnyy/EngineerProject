            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <ListView
                    Header="  Channel        Number of WLANs"
                    Grid.Column="0"
                    Grid.Row="4"
                    Grid.ColumnSpan="3"
                    Grid.RowSpan="8"
                    ItemsSource="{Binding ChannelsDictionary2GHz}">
